{
    "manifest_version": 3,
    "name": "Browser Sound Effects",
    "description": "Play cute sound effects when typing or clicking around your browser",
    "version": "0.0",

    "permissions": ["tabs", "activeTab"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "./images/fujiishinunoga.png"
    },

    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}